
<% provide(:title, "Cadastrar Música")%>
<h3 class="text-center">Cadastrar Música</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3 min-600">
    <%= form_for(:musicas, url:musicas_path) do |f| %>
        <%= f.label "Artista" %>
        <%= f.collection_select :artists_id, Artist.order(:name),:id,:name, {}, include_blank: "Selecione um Artista", class: "form-control" %>

        <%= f.label "Nome da Música" %>
        <%= f.text_field :name, class: 'form-control' %>


        <%= f.label "Album" %>
        <%= f.collection_select :albums_id, Album.order(:name),:id,:name, {}, include_blank: "Selecione um Album", class: "form-control" %>


        <%= f.submit 'Criar Música', class: "btn btn-primary pull-right", style:"margin-top:10px;"%>

    <% end %>
  </div>
</div>